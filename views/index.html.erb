<form id="name-form" action="/" method="POST" autocomplete="off">
  <div class="form-field">
    <label for="name" class="form-label">Me llamo</label>
    <div class="form-input">
      <input type="text" id="name" name="name" value="<%= names.join(', ') %>" placeholder="Maria o Juan, Carlos"/>
    </div>
  </div>
  <div class="form-field">
    <label for="year" class="form-label">y nac&iacute; en</label>
    <select id="year" name="year">
      <% (1960..2010).each do |sel_year| %>
        <option value="<%= sel_year %>" <% if year == sel_year %>selected="selected"<% end %>>
          <%= sel_year %>
        </option>
      <% end %>
    </select>
  </div>
  <input type="submit" name="submit" class="btn primary" value="Continuar" />
</form>

